{
  "compilerOptions": {
    /* =========================
       Runtime / Module
    ========================= */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* =========================
       Paths
    ========================= */
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "rootDir": "src",
    "outDir": "dist",

    /* =========================
       Type Safety
    ========================= */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* =========================
       Interop / DX
    ========================= */
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* =========================
       Dev Experience
    ========================= */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
